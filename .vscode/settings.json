// Place your settings in this file to overwrite default and user settings.
{
	"editor.insertSpaces": true,
	"editor.formatOnType": true,
	"editor.formatOnPaste": true,
    "files.associations": {
        "iostream": "cpp",
        "omp.h": "cpp",
        "utility": "cpp",
        "*inl*inl*inl*inl*inl*inl*inl*inl*inl*inl*inl*inlinitializer_list": "cpp",
        "*h*inl*harray": "cpp",
        "*h*hutility": "cpp",
        "*h*h*h*h*h*hexception": "cpp",
        "cstdarg": "cpp",
        "*h*hcwchar": "cpp",
        "cwchar": "cpp",
        "cstdint": "cpp",
        "cctype": "cpp",
        "type_traits": "cpp",
        "cstddef": "cpp",
        "initializer_list": "cpp",
        "*hcstdlib": "cpp",
        "cstdlib": "cpp",
        "*hnew": "cpp",
        "clocale": "cpp",
        "cwctype": "cpp",
        "*htypeinfo": "cpp",
        "cstdio": "cpp",
        "ctime": "cpp"
    },
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"bin": true,
		"build": true,
		"dependencies": true
	},
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"C_Cpp.clang_format_formatOnSave": true,
	"C_Cpp.clang_format_fallbackStyle": "LLVM"
}
